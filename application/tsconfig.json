{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["**/*.ts", "*.ts", "babel.config.js"],
  "exclude": ["node_modules"],
  "buildOnSave": true,
  "compileOnSave": true
}

