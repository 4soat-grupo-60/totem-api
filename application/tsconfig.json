{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["../node_modules/@types"],
    "types": ["node", "reflect-metadata"]
  },
  "include": ["**/*.ts", "*.ts"],
  "exclude": ["node_modules"],
  "buildOnSave": true,
  "compileOnSave": true
}
